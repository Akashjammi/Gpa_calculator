<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                        <TextView
                            android:id="@+id/gpa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="63dp"
                            android:layout_marginTop="33dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="0dp"
                            android:fontFamily="@font/aclonica"
                            android:text="CGPA CALCULATOR"
                            android:textAlignment="textStart"
                            android:textAllCaps="true"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="0dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="90dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/audiowide"
                            android:text="Probability and Queuing theory"
                            android:textSize="20sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.38"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/gpa"
                            app:layout_constraintVertical_bias="0.444" />

                        <EditText
                            android:id="@+id/pqt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="30dp"
                            android:ems="10"
                            android:hint="GRADE"
                            android:inputType="textPersonName" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/audiowide"
                            android:text="Microprocessor and Microcontroller"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/mpmc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="30dp"
                            android:ems="10"
                            android:hint="GRADE"
                            android:inputType="textPersonName" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/audiowide"
                            android:text="Paradigms of Algorithm Design"
                            android:textAlignment="viewStart"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/pad"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="30dp"
                            android:ems="10"
                            android:hint="GRADE"
                            android:inputType="textPersonName" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/audiowide"
                            android:text="Database Management System"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/dbms"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="GRADE"
                            android:inputType="textPersonName" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/audiowide"
                            android:text="Software Engineering Methodologies"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/sem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="GRADE"
                            android:inputType="textPersonName" />

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/audiowide"
                            android:text="IT Essential"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/ite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="30dp"
                            android:ems="10"
                            android:hint="GRADE"
                            android:inputType="textPersonName" />

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/audiowide"
                            android:text="Mpmc lab"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/mpmcl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="GRADE"
                            android:inputType="textPersonName" />

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="30dp"
                            android:fontFamily="@font/audiowide"
                            android:text="DBMS Laboratory"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/dbmsl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="GRADE"
                            android:inputType="textPersonName" />

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/audiowide"
                            android:text="Mini Project"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/minipl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="GRADE"
                            android:inputType="textPersonName" />


                        <Button
                            android:id="@+id/submit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="check"
                            android:text="CHECK" />

                </LinearLayout>
        </ScrollView>

</android.support.constraint.ConstraintLayout>